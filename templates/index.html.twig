{% import 'icons/macro.html.twig' as icon %}

<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Welcome!{% endblock %}</title>
        {% block stylesheets %}
            <link rel="stylesheet" href="{{ asset('build/css/theme.css') }}"/>
        {% endblock %}
    </head>
    <body>
        <nav></nav>
        <header></header>
        <div class="vinyl">
            <img src="{{ 'images/vinyl.png' }}" title="Vinyl" alt="K&ouml;rbe voller Vinylplatten">
        </div>
        <div class="resources">
            <div class="inner">
                <div class="card">
                    <span class="header-icon">{{ icon.render('note', 'red') }}</span>
                    <h3>Eure Musik</h3>
                    <p>(1-3 Alben, EPs, LPs, Mixtapes, …) im mp3-Format</p>
                </div>
                <div class="card">
                    <span class="header-icon">{{ icon.render('cover', 'red') }}</span>
                    <h3>Die Cover</h3>
                    <p>Als jpg oder png (min 500px x 500px)</p>
                </div>
                <div class="card">
                    <span class="header-icon">{{ icon.render('person', 'red') }}</span>
                    <h3>Profilbild</h3>
                    <p>Mit Menschen drauf, als jpg oder png (min 600px x 400px)</p>
                </div>
                <div class="card">
                    <span class="header-icon">{{ icon.render('image', 'red') }}</span>
                    <h3>Ein Bannerbild</h3>
                    <p>Als jpg oder png (min 1920px x 1080px)</p>
                </div>
                <div class="card">
                    <span class="header-icon">{{ icon.render('info', 'red') }}</span>
                    <h3>Informationen</h3>
                    <p>&Uuml;ber Euch, die Musik, die Inspiration, existierende Pressetexte…</p>
                </div>

                <p>
                    Der Einfachheit halber k&ouml;nnt Ihr <a href="FILE">{# TODO #}hier eine ZIP-Datei</a>
                    herunterladen, die Ihr entpacken, bef&uuml;llen, wieder verpacken und uns zusenden k&ouml;nnt.
                </p>
            </div>
        </div>
        <div class="cta-wrapper">
            <a class="cta-button" href="mailto:mitmachen@keinegrenzen.org">JETZT</a>
            <div class="cta-elements">
                {% for i in 1..3 %}
                    <div class="cta-element">
                        <p>
                            Teil des<br>
                            Kollektivs<br>
                            werden<br>
                        </p>
                        <a href="mailto:mitmachen@keinegrenzen.org">(mitmachen@keinegrenzen.org)</a>
                    </div>
                {% endfor %}
            </div>
        </div>
        <footer>
            <div class="imprint">
                <p class="strong">
                    keinegrenzen.org<br>
                    Gemeinnütziges Musikprojekt
                </p>
                <p>
                    Barth&eacute;l&eacute;my Bonhomme<br>
                    Drosselweg 22<br>
                    50735 Köln<br>
                    Deutschland<br>
                    E-Mail: kontakt@keinegrenzen.org<br>
                    Tel: <a href="tel:+4917630594643" title="Kontakt aufnehmen">+49 176 30594643</a><br>
                </p>
            </div>
            <div class="notices">
                <p class="copyright">
                    &copy; 2016-{{ "now"|date("Y") }} Barth&eacute;l&eacute;my Bonhomme
                </p>
                <p class="origin">
                    Mit <span>{{ icon.render('smile', 'blue') }} <i class="sr-only">Leidenschaft</i></span>
                    entwickelt in K&ouml;ln
                </p>
            </div>
        </footer>
        {% block body %}{% endblock %}
        {% block javascripts %}
            <script src="{{ asset('build/js/theme.js') }}" type="text/javascript"></script>
        {% endblock %}
    </body>
</html>
